{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    "skipLibCheck": true,

    /* Cypress Type Definitions */
    "types": ["cypress", "node"],

    /* Required for project references */
    "composite": true
  },
  "files": [],
  "references": [
    { "path": "./server" },
    { "path": "./client" },
    { "path": "./cypress" }
  ],
  "include": [
    "cypress.config.ts",
    "cypress/support/**/*.ts",
    "cypress/**/*.ts", "cypress/**/*.tsx",
    "cypress/integration/**/*.cy.ts"
  ],
  "exclude": [
    "node_modules",
    "cypress/support/**/*.js"
  ]
}
